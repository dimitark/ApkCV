<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="dime.android.apkcv">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <!-- The main activity -->
        <activity android:name=".ui.activities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- The details activity -->
        <activity android:name=".ui.activities.DetailsActivity" android:screenOrientation="portrait" />
    </application>

</manifest>
